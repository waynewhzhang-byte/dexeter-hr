{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "bun-types"
    ],
    "baseUrl": ".",
    "paths": {
      "@domain-pack-schema": [
        "packages/domain-pack-schema/src/index.ts"
      ],
      "@config-sdk": [
        "packages/config-sdk/src/client.ts"
      ]
    }
  },
  "include": [
    "apps/**/*.ts",
    "packages/**/*.ts",
    "infra/**/*.ts",
    "src/**/*.ts"
  ]
}
